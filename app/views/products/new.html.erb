

<% @product.errors.full_messages.each do |error| %> 
  <h3><%= error %></h3>
<%end%>

<h1> Make a New Product! </h1>

<%= form_tag '/products', method: :post do%>
  <div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name %>
  </div>
<div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
</div>
<div class="form-group">
  <%= label_tag :image %>
  <%= text_field_tag :image, @product.image %>
</div>
<div class="form-group">
  <%= label_tag :description %>
  <%= text_field_tag :description, @product.description %>
</div>
<%= submit_tag 'Product Complete' %>
<%end%>