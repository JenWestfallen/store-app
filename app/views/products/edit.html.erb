<% @product.errors.full_messages.each do |error| %> 
  <h3><%= error %></h3>
<%end%>

<h1>Edit the Product</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>

 <div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name %>
  </div>

  <div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
  </div>


<div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @product.description %>
</div>



  <%= submit_tag "Update" %>

  <% end %>

  <h5><a href="/products/<%= @product.id %>/edit">Edit</a></h5>